<div class="container">
<% if user_signed_in? %>
<h2 class="text-center">Your Errors</h2>
<div class=""container><h3 class="text-center"><%= link_to "Add Error", new_eror_path, class: "btn btn-info" %></h3></div>
<% else %>
<h2 class="text-center">All Errors</h2>
<% end %>
</div>

<div class="container">
	<table class="table table-hover table-bordered">
	<thead><tr>
		<th>#</th>
		<th>Name</th>
		<th>Description</th>
		<th>Cause</th>
		<th>Fix</th>
		<th>Created By</th>
		<% if user_signed_in? %>
		<th>Show</th>
		<th>Edit</th>
		<th>Delete</th>
		<% end %>
	</tr>
	</thead>
	<tbody class="table-hover">
	<% @eror.each_with_index do |er,index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= er.name.downcase%></td>
			<td><%= er.description %></td>
			<td><%= er.cause %></td>
			<td><%= er.fix %></td>
			<td><%= er.user.email %></td>
			<% if user_signed_in? %>
			<td><%= link_to "Show", eror_path(er), class: "btn btn-info" %></td>
			<td><%= link_to "Edit", edit_eror_path(er), class: "btn btn-info" %></td>
			<td><%= link_to "Delete", eror_path(er), method: :delete, data: {confirm: "Sire! Are you sure you want to do this?"}, class: "btn btn-info" %></td>
			<% end %>
		</tr>
	<% end %>
	</tbody>
	</table>
	<div class="text-center"> 
		<%= will_paginate @eror, renderer: BootstrapPagination::Rails, previous_label: "Newer", next_label: "Older" %>
	</div>
</div>