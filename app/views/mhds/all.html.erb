<h2 class="text-center">All Methods</h2>
<div class="container">
	<table class="table table-hover table-bordered">
	<thead><tr>
		<th>#</th>
		<th>Name</th>
		<th>Type</th>
		<th>Value</th>
		<th>Description</th>
		<th>Created By</th>
	</tr>
	</thead>
	<tbody class="table-hover">
	<% @mhds_all.each_with_index do |md,index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= md.name.downcase%></td>
			<td><%= md.mtype %></td>
			<td><%= md.value %></td>
			<td><%= md.description %></td>
			<td><%= md.user.email %></td>
		</tr>
	<% end %>
	</tbody>
	</table>
	<div class="text-center"> 
		<%= will_paginate @mhds_all, renderer: BootstrapPagination::Rails, previous_label: "Newer", next_label: "Older" %>
	</div>
</div>