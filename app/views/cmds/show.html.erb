<%= render 'shared/nav' %>
<div class="container"><h2 class="text-center">Your Wish Is My Command</h2></div>

<div class="container show-page">
	<table class="table table-hover table-bordered">
	<thead><tr>
		<th>#</th>
		<th>Command</th>
		<th>Option</th>
		<th>Description</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	</thead>
	<tbody class="table-hover">
	<% index = 0 %>
		<tr>
			<td><%= index ++ 1 %></td>
			<td><%= @command.name %></td>
			<td><%= @command.option %></td>
			<td><%= @command.description%></td>
			<td><%= link_to "Edit", edit_cmd_path(@command), class: "btn btn-warning" %></td>
			<td><%= link_to "Delete", cmd_path(@command), method: :delete, data: {confirm: "Sire! Are you sure you want to do this?"}, class: "btn btn-danger" %></td>
		</tr>
	</tbody>
	</table>
</div>
