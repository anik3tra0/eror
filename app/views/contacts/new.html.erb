<h1 class="text-center">If you found any bugs or have a suggestion, then just mail me!</h1>
<div class="container center-block" id="forms">
	<%= bootstrap_form_for @contact do |f| %>
		<%=f.text_field :name, required: true, label: "Enter your name" %>
		<%=f.text_field :email, required: true, label: "Enter your email" %>
		<%=f.text_area :message, as: :text, label: "Enter your message" %>
		<div class="hidden">
		<%=f.text_field :nickname, hint: "Leave this field blank" %>
		</div>
		<div class="text-center">
			<%= f.submit "Send", class: "btn btn-success" %>
		</div>
	<% end %>
</div>