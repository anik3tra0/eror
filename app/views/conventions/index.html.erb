<div class="container">
<% if user_signed_in? %>
<h2 class="text-center">Your Conventions</h2>
<div class=""container><h3 class="text-center"><%= link_to "Add Convention", new_convention_path, class: "btn btn-info" %></h3>
</div>
<% else %>
<h2 class="text-center">All Conventions</h2>
<% end %>
</div>

<div class="container">
	<table class="table table-hover table-bordered">
	<thead><tr>
		<th>#</th>
		<th>Controller</th>
		<th>Action</th>
		<th>Views</th>
		<th>URI</th>
		<th>Description</th>
		<th>Created By</th>
		<% if user_signed_in? %>
		<th>Show</th>
		<th>Edit</th>
		<th>Delete</th>
		<% end %>
	</tr>
	</thead>
	<tbody class="table-hover">
	<% @convention.each_with_index do |conv,index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= conv.ctlr.downcase%></td>
			<td><%= conv.action %></td>
			<td><%= conv.views %></td>
			<td><%= conv.uri.downcase %></td>
			<td><%= conv.description %></td>
			<td><%= conv.user.email %></td>
			<% if user_signed_in? %>
			<td><%= link_to "Show", convention_path(conv), class: "btn btn-info" %></td>
			<td><%= link_to "Edit", edit_convention_path(conv), class: "btn btn-info" %></td>
			<td><%= link_to "Delete", convention_path(conv), method: :delete, data: {confirm: "Sire! Are you sure you want to do this?"}, class: "btn btn-info" %></td>
			<% end %>
		</tr>
	<% end %>
	</tbody>
	</table>
	<div class="text-center"> 
		<%= will_paginate @convention, renderer: BootstrapPagination::Rails, previous_label: "Newer", next_label: "Older" %>
	</div>
</div>