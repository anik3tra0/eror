<h2 class="text-center">All Conventions</h2>
<div class="container">
	<table class="table table-hover table-bordered">
	<thead><tr>
		<th>#</th>
		<th>Controller</th>
		<th>Action</th>
		<th>Views</th>
		<th>URI</th>
		<th>Description</th>
		<th>Created By</th>
	</tr>
	</thead>
	<tbody class="table-hover">
	<% @conv_all.each_with_index do |conv,index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= conv.ctlr.downcase%></td>
			<td><%= conv.action %></td>
			<td><%= conv.views %></td>
			<td><%= conv.uri.downcase %></td>
			<td><%= conv.description %></td>
			<td><%= conv.user.email %></td>
		</tr>
	<% end %>
	</tbody>
	</table>
	<div class="text-center"> 
		<%= will_paginate @conv_all, renderer: BootstrapPagination::Rails, previous_label: "Newer", next_label: "Older" %>
	</div>
</div>